<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.myui" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Myapplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ImageAn"
            android:label="单张图片手势缩放" />
        <activity
            android:name=".activity.ImageGroup"
            android:label="多张滑动图片放大" />
        <activity
            android:name=".activity.ImageCarousel"
            android:label="@string/title_activity_image_carousel" >
        </activity>
        <activity
            android:name=".activity.ImageShape"
            android:label="@string/title_activity_image_shape" >
        </activity>
        <activity
            android:name=".activity.DeleteListViewMainActivity"
            android:label="@string/title_activity_delete_list_view_main" >
        </activity>
        <activity
            android:name=".activity.DragViewActivity"
            android:label="@string/title_activity_drag_view" >
        </activity>
    </application>

</manifest>
